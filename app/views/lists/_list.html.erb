<div class="column", id="<%= list.id %>">
  <div class="column-header">
    <div class="card">
      <div class="card-header">
        <div style="float: left;"><%= list.title %></div>
        <div style="float: right;">
          <%= link_to 'Delete', dashboard_list_path(list.dashboard, list),
                                method: :delete, class:  "btn btn-danger",
                                data: { confirm: 'Are you sure?' } %>
          </div>
      </div>
    </div>
  </div>
  <div class="column-content" style="min-height: 10px;">
    <%= render list.cards %>
  </div>
  <div class="column-footer">
    <div class="card">
      <%= link_to '+Add a card', new_list_card_path(list.id), class:"btn btn-primary" %>
    </div>
  </div>
</div>
